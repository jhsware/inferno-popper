{
  "name": "inferno-popper",
  "version": "5.0.1",
  "description": "Inferno wrapper around PopperJS.",
  "main": "index.js",
  "files": [
    "dist",
    "lib",
    "index.js"
  ],
  "scripts": {
    "test": "echo \"ok\"",
    "test-browser": "npm run build-test && node test/browser/server.js",
    "build": "rm -rf ./dist && cross-env NODE_ENV=production babel lib --out-dir dist  --source-maps",
    "build-dev": "rm -rf ./dist && babel lib --out-dir dist --watch --source-maps",
    "build-test": "rm -rf ./test/dist && node_modules/.bin/webpack --config ./test/browser/webpack.config.js",
    "build-test-dev": "rm -rf ./test/dist && node_modules/.bin/webpack --watch --config ./test/browser/webpack.config.js",
    "postbuild": "cross-env NODE_ENV=production && cross-env TARGET=minify webpack --config webpack.prod.config.js",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jhsware/inferno-popper"
  },
  "keywords": [
    "inferno",
    "inferno-popper",
    "popperjs",
    "component",
    "drop",
    "tooltip",
    "popover"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jhsware/inferno-popper/issues"
  },
  "peerDependencies": {
    "inferno": "^5.0.1",
    "inferno-create-element": "^5.0.1",
    "inferno-shared": "^5.0.1"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "popper.js": "^1.10.8"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^20.0.3",
    "babel-loader": "^6.4.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-inferno": "^5.0.1",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bootstrap": "^4.0.0",
    "cross-env": "^5.0.5",
    "express": "^4.15.4",
    "inferno": "^5.0.1",
    "inferno-create-element": "^5.0.1",
    "inferno-devtools": "^5.0.1",
    "inferno-router": "^5.0.1",
    "inferno-shared": "^5.0.1",
    "inferno-test-utils": "^5.0.1",
    "jest": "^20.0.4",
    "prismjs": "^1.6.0",
    "webpack": "^3.11.0"
  }
}
